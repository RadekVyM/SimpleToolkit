<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleToolkit.SimpleShell.Playground.Views.Pages.FirstYellowDetailPage"
             Title="FirstYellowDetailPage">
    <Grid BackgroundColor="Goldenrod">
        <Label
            FontSize="20"
            Text="First yellow detail page"
            TextColor="White"
            TextTransform="Uppercase"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Go to second detail page" Clicked="Button_Clicked" Style="{StaticResource YellowPageNavigationButton}"/>
    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleToolkit.SimpleShell.Playground.Views.Pages.ThirdYellowDetailPage"
             Title="ThirdYellowDetailPage"
             Shell.PresentationMode="Modal">
    <Grid BackgroundColor="Goldenrod">
        <Label
            FontSize="20"
            Text="Third yellow detail page"
            TextColor="White"
            TextTransform="Uppercase"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <VerticalStackLayout
            VerticalOptions="End">
            <Button Text="Twice back" Clicked="TwiceButton_Clicked" Style="{StaticResource YellowPageNavigationButton}"/>
            <Button Text="Go to green page" Clicked="Button_Clicked" Style="{StaticResource YellowPageNavigationButton}"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>